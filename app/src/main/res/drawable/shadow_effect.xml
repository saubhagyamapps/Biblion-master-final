<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="15dp" />
            <gradient
                android:angle="270"
                android:centerColor="#FFc2e7f6"
                android:endColor="#FFd1ecf6"
                android:startColor="#FFb2e2f5" />
        </shape>
    </item>

    <item
        android:left="0dp"
        android:right="0dp"
        android:top="0dp"
        android:bottom="6dp">
        <shape android:shape="rectangle">
            <solid android:color="#ff7282"/>
            <corners android:radius="8dp" />
        </shape>
    </item>
</layer-list>